{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    ":semanticCommits"
  ],
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Build and runtime Node major versions must match â€” update allowedVersions when changing the distroless base image",
      "matchDepNames": ["node"],
      "allowedVersions": "^22",
      "groupName": "node"
    },
    {
      "matchDepNames": ["gcr.io/distroless/nodejs22-debian12"],
      "groupName": "node"
    }
  ]
}
